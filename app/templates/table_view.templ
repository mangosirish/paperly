package templates

templ TableView(requested_table string) {
	/*html*/
	<div
		class="container"
		hx-get={ "/web-" + requested_table }
		hx-trigger="load"
		hx-target=".main-content"
		hx-swap="innerHTML transition:true"
	>
		<nav class="nav-panel">
			<ul>
				<li class="active">Autores</li>
				<li>Articulos</li>
				<li>Servicio Social</li>
				<li>Numeros</li>
			</ul>
		</nav>
		<main class="main-content">
			Loading... { "/web-" + requested_table }
		</main>
	</div>
}
